<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <dimen name="boldSize">17sp</dimen>
    <dimen name="normalSize">14sp</dimen>
    <dimen name="titleSize">20sp</dimen>
    <dimen name="titleSize1">30sp</dimen>
    <dimen name="paddingParent">15dp</dimen>
    <dimen name="marginBottomContent">10dp</dimen>
    <dimen name="marginLeftContent">35dp</dimen>
    <dimen name="marginLeftContent1">15dp</dimen>
    <dimen name="marginTopContent">30dp</dimen>
    <dimen name="marginTopContent1">8dp</dimen>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#9BCFF6</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>